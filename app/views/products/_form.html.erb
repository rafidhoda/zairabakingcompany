<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form">
    <div class="field">
      <%= form.text_field :title, class: 'text-field', placeholder: 'Cookie' %>
    </div>

    <div class="field">
      <%= form.text_area :description, class: 'text-area', rows: 5, placeholder: 'These cookies are so amazeballs' %>
    </div>

    <div class="field">
      <%= form.text_field :image_url, class: 'text-field', placeholder: 'https://i.imgur.com/iFmDBUZ.png' %>
    </div>

    <div class="field">
      <%= form.text_field :currency, class: 'text-field', placeholder: 'NOK' %>
    </div>

    <div class="field">
      <%= form.number_field :cost, class: 'text-field', placeholder: '50' %>
    </div>

    <div class="field">
      <%= form.number_field :items_per_order, class: 'text-field', placeholder: '5' %>
    </div>

    <div class="field">
      <%= form.submit "Submit", class: 'fullwidth-button' %>
    </div>
  </div>

<% end %>
